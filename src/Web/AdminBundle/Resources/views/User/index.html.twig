{% extends 'WebAdminBundle::base.html.twig' %}

{% block content_wrapper %}
    {{ parent() }}
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">Users</h3>
        </div>
        <div class="box-body">
            <h1>User list</h1>

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Isactive</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for User in Users %}
                    <tr>
                        <td><a href="{{ path('admin_users_show', { 'id': User.id }) }}">{{ User.id }}</a></td>
                        <td>{{ User.username }}</td>
                        <td>{{ User.email }}</td>
                        <td>{{ User.name }}</td>
                        <td>{{ User.surname }}</td>
                        <td>{% if User.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>{% for role in User.roles %}{{ role }}{% endfor %}</td>
                        <td>
                            <a class="btn btn-block btn-success btn-sm" href="{{ path('admin_users_show', { 'id': User.id }) }}">show</a>
                            <a class="btn btn-block btn-danger btn-sm" href="{{ path('admin_users_edit', { 'id': User.id }) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('admin_users_new') }}">Create a new entry</a>
                </li>
            </ul>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Many more skins available. <a href="http://fronteed.com/iCheck/">Documentation</a>
        </div>
    </div>

{% endblock %}
