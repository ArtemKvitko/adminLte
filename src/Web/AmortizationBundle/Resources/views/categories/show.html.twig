{% extends 'WebAdminBundle::base.html.twig' %}

{% block content_wrapper %}
    <h1>Categories</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Sabnumber</th>
                <td>{{ category.sabNumber }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Usefultime</th>
                <td>{% if category.usefulTime %}{{ category.usefulTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>


            <a class="btn btn-primary" href="{{ path('categories_index') }}">Back to the list</a>
        
            <a class="btn btn-warning" href="{{ path('categories_edit', { 'id': category.id }) }}">Edit</a>
        
            
             <a class="btn btn-danger" href="{{ delete_url }}">Delete</a><br/>
        
{% endblock %}
